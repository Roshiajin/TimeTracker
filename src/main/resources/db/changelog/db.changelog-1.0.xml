<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="AleksandrGaptullin" id="changelog-1.0" context="legacy">
        <createTable tableName="person">
            <column name="id" type="number">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="AleksandrGaptullin" id="changelog-1.1" context="legacy">
        <createTable tableName="timelog">
            <column name="id" type="number">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="log_description" type="varchar(200)">
                <constraints nullable="true"/>
            </column>
            <column name="start_datetime" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_datetime" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>